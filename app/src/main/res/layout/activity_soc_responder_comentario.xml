<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".soc_responder_comentario">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:padding="20dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Responder comentario"
            android:textSize="34sp"/>

        <TextView
            android:id="@+id/txtFechaResponder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txtNombreResponder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txtWhatsAppResponder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="WhatsApp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txtComentarioResponder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comentario"
            android:textSize="18sp"/>


        <TextView
            android:id="@+id/txtComentarioObtenidoWeb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="comentario traido de la app web"
            android:textSize="18sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textView66"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Responder"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/inputResponderComentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
             />

        <Button
            android:id="@+id/btn_ResponderCometario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Responder" />

        <Button
            android:id="@+id/btn_VolverResponderComentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>