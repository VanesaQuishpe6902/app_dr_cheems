<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".Dashboard">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:background="@color/segundo"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_semibold"
                android:gravity="center_horizontal|center_vertical"
                android:text="INICIO"
                android:textColor="@color/white"
                android:textSize="28dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#EEFCFF"
            android:orientation="vertical"
            android:padding="20dp">



            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="130dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_card_login"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center_horizontal"
                            app:srcCompat="@drawable/cliente" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksand_medium"
                            android:gravity="center"
                            android:text="Clientes"
                            android:textColor="@color/plomo"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <Space
                        android:layout_width="16dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_card_login">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            app:srcCompat="@drawable/citas"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksand_medium"
                            android:text="Citas"
                            android:gravity="center"
                            android:textColor="@color/plomo"
                            android:textSize="20sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <Space
                        android:layout_width="16dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_card_login">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            app:srcCompat="@drawable/redessociales"
                            android:layout_gravity="center_horizontal"/>

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Red Social"
                            android:textColor="@color/plomo"
                            android:fontFamily="@font/quicksand_medium"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:gravity="center"/>
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView222"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/btn_md_square_rounded"
                        android:padding="5dp"
                        app:srcCompat="@android:drawable/ic_menu_manage" />

                    <TextView
                        android:id="@+id/textView30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Perfil" />
                </LinearLayout>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView22"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/btn_md_square_rounded"
                        android:padding="5dp"
                        app:srcCompat="@android:drawable/ic_menu_info_details" />

                    <TextView
                        android:id="@+id/textView301"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="V 1.0.0" />
                </LinearLayout>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView22454"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/btn_md_square_rounded"
                        android:padding="5dp"
                        app:srcCompat="@android:drawable/ic_menu_view" />

                    <TextView
                        android:id="@+id/textView30145"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ver sitio web" />
                </LinearLayout>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView2212"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/btn_md_square_rounded"
                        android:padding="5dp"
                        app:srcCompat="@android:drawable/ic_lock_power_off" />

                    <TextView
                        android:id="@+id/textView30131"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salir" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>



</LinearLayout>