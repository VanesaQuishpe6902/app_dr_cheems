<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".usu_menu_perfil">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:padding="20dp">

        <TextView
            android:id="@+id/textView49"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mi perfil"
            android:textSize="34sp"/>

        <Button
            android:id="@+id/btn_EditarPerfilUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EDITAR" />

        <TextView
            android:id="@+id/txtApellidoPerfilUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="apellido"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txtNombrePerfilUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="nombre"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txtCorreoPerfilUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="correo"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtClavePerfilUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="clave"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txtCelularPerfilUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="WhastApp"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_VolverPerfilUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>